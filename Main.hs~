import AdaBoost

instance TrainingTest Int where
    isValid a = odd a

-- | 'Classifier' using a pseudo-haar feature to check an object
data HaarClassifier = HaarClassifier Int
    deriving (Show, Read)

instance Classifier HaarClassifier Int where
    (HaarClassifier a) `check` b = a == b
